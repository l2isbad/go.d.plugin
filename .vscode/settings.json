// Place your settings in this file to overwrite the default settings
{
    "git.openDiffOnClick":true,
    // "editor.fontFamily": "'Fira Code'",
    // "editor.fontFamily": "Script12 BT",
    "editor.cursorSmoothCaretAnimation":true,
    "editor.fontSize": 15, // 15
    "editor.fontFamily": "'Fira Code'",// "'PragmataPro'",
    "editor.fontLigatures": true,
    // "vscode_custom_css.imports": [
    //     "file:///c:/mygopath/src/github.com/kataras/iris/.vscode/styles.css"
    // ],
    "editor.fontWeight": "400",
    "editor.renderIndentGuides": false,
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "solid",
    "editor.tabSize": 4,
    "editor.formatOnSave": false, // for non-golang
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "vendor": false
    },
    // Specifies Lint tool name.
    "go.lintTool": "golint",
    "window.zoomLevel": 0,
    "editor.minimap.enabled": true,
    "files.autoSave": "off",
    "go.formatTool": "gofmt",

    "go.buildOnSave": "package",
    "editor.suggestFontSize": 14,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "Fira Code",
    "workbench.colorTheme": "Visual Studio Light",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.activityBar.visible": true, // optionally toggles the workbench controls
    "workbench.editor.enablePreview": false, // it's a good feature if it's on but I want to keep the windows on, mostly when I navigate to a native source code.
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.statusBar.visible": true,
    "workbench.editor.closeOnFileDelete": true,
    "workbench.sideBar.location": "left",
    // Enable usage data and errors to be sent to Microsoft.
    "telemetry.enableTelemetry": false,
    // Enable crash reports to be sent to Microsoft.
    // This option requires restart to take effect.
    "telemetry.enableCrashReporter": false,
    // Whether git is enabled
    // user settings: "git.path": "C:\\Users\\kataras\\AppData\\Local\\GitHubDesktop\\app-1.0.9\\resources\\app\\git\\cmd",
    "git.enabled": true,
    "extensions.ignoreRecommendations": true,
    "git.enableSmartCommit": true, // I always turn off git on my editors, I am managing git diffs and pushes by programs like Github Desktop or Kraken.
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "vendor/**": true
    },
    "editor.tabCompletion":"on"
}